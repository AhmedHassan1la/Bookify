@using Bookify.Web.Core.ViewModels.BookCopy
@model BookCopyViewModel

@{
    ViewData["Title"] = "Create Book Copy";
}

<h2>Create Book Copy</h2>

<form asp-action="Create" method="post">

    <input type="hidden" asp-for="BookId" />

  

    <div class="form-group mb-3">
        <div class="form-check">
            <input asp-for="IsAvailableForRental" type="checkbox" class="form-check-input" />
            <label asp-for="IsAvailableForRental" class="form-check-label">Is Available for Rental</label>
        </div>
        <span asp-validation-for="IsAvailableForRental" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="EditionNumber" class="form-label">Edition Number</label>
        <input asp-for="EditionNumber" class="form-control" />
        <span asp-validation-for="EditionNumber" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <div class="form-check">
            <input asp-for="IsDeleted" type="checkbox" class="form-check-input" />
            <label asp-for="IsDeleted" class="form-check-label">Is Deleted</label>
        </div>
        <span asp-validation-for="IsDeleted" class="text-danger"></span>
    </div>




    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-controller="Books" asp-action="Details" asp-route-id="@Model.BookId" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
