@model IEnumerable<Bookify.Contracts.ViewModels.Subscriber.SubscriberViewModel>

@{
    ViewData["Title"] = "Subscribers";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">


<h1 class="mb-4">Subscribers List</h1>

<p>
    <a asp-controller="Subscribers" asp-action="Create" class="btn btn-success mb-4">
        <i class="fas fa-user-plus"></i> Add New Subscriber
    </a>
</p>

<!-- Search Form -->
<form asp-action="Index" method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="searchTerm" class="form-control" placeholder="Search by Name, Phone, or National ID" value="@Context.Request.Query["searchTerm"]" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-search"></i> Search
            </button>
        </div>
    </div>
</form>

@if (!string.IsNullOrEmpty(Context.Request.Query["searchTerm"]))

{

    if (Model.Any())

    {
        <div class="row">
            @foreach (var subscriber in Model)

            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">@subscriber.FirstName @subscriber.LastName</h5>
                            <p class="card-text">
                                <strong>Phone:</strong> @subscriber.MobileNumber<br />
                            </p>
                            <a asp-controller="Subscribers" asp-action="Details" asp-route-id="@subscriber.Id" class="btn btn-info btn-sm">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    else

    {
        <div class="alert alert-warning">No subscribers found.</div>
    }

}





