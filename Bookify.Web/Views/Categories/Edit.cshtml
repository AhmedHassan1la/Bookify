@using Bookify.Web.Core.ViewModels.Category
@model EditViewModel

@{
    ViewData["title"] = "Edit Category";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">Edit Category</h3>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <form method="post" asp-controller="Categories" asp-action="Edit">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" placeholder="Name" asp-for="Name" required />
                        <label asp-for="Name">Category Name</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}