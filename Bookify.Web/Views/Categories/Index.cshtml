@using Bookify.Web.Core.ViewModels.Category
@model IEnumerable<CategoryViewModel>





@{
    ViewData["title"] = "Categories";
}
    @* // ده خاص بال datatable *@

@section Styles {
    <link href="~/assets/plugins/datatables/datatables.bundle.css" rel="stylesheet" />
}

<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">Categories</h3>
        <div class="card-toolbar">
            <a asp-controller="Categories" asp-action="Create" class="btn btn-sm btn-primary">
                Add
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {                          //ده كود ال Alert بمعني ان لو مفيش Category هيظهر ال Alert ده
            <div class="alert alert-dismissible bg-light-warning border border-warning border-dashed d-flex flex-column flex-sm-row w-100 p-5 mb-10">
                <!--begin::Icon-->
                <!--begin::Svg Icon | path: icons/duotune/communication/com003.svg-->
                <span class="svg-icon svg-icon-2hx svg-icon-warning me-4 mb-5 mb-sm-0">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect opacity="0.3" x="2" y="2" width="20" height="20" rx="10" fill="currentColor" />
                        <rect x="11" y="14" width="7" height="2" rx="1" transform="rotate(-90 11 14)" fill="currentColor" />
                        <rect x="11" y="17" width="2" height="2" rx="1" transform="rotate(-90 11 17)" fill="currentColor" />
                    </svg>
                </span>
                <!--end::Svg Icon-->
                <!--end::Icon-->
                <!--begin::Content-->
                <div class="d-flex flex-column pe-0 pe-sm-10 align-self-center">
                    <h5 class="mb-1">No categories found!</h5>
                </div>
                <!--end::Content-->
            </div>
        }
        else
        {
            <div class="py-5">
                <div class="table-responsive">
                    <table class="table table-row-dashed table-row-gray-300 gy-7">
                        <thead>
                            <tr class="fw-bold fs-6 text-gray-800">
                                <th>name</th>
                                <th>Status</th>
                                <th>Create On</th>
                                <th>LastUpdatedOn</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td>@category.Name</td>
                                    <td>
                                        <span class="badge status-badge badge-light-@(category.IsDeleted ? "danger" : "success")">
                                            @(category.IsDeleted ? "Deleted" : "Available")
                                        </span>
                                    </td>
                                    <td>@category.CreatedOn.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td class="last-updated-on">@category.LastUpdatedOn?.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    @*                                        <td>
                            *@
                                    <td>
                                        <button type="button" class="btn btn-sm btn-icon btn-color-primary btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                                            <!--begin::Svg Icon | path: icons/duotune/general/gen024.svg-->
                                            <span class="svg-icon svg-icon-2">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24">
                                                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                        <rect x="5" y="5" width="5" height="5" rx="1" fill="currentColor"></rect>
                                                        <rect x="14" y="5" width="5" height="5" rx="1" fill="currentColor" opacity="0.3"></rect>
                                                        <rect x="5" y="14" width="5" height="5" rx="1" fill="currentColor" opacity="0.3"></rect>
                                                        <rect x="14" y="14" width="5" height="5" rx="1" fill="currentColor" opacity="0.3"></rect>
                                                    </g>
                                                </svg>
                                            </span>
                                            <!--end::Svg Icon-->
                                        </button>
                                        <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg-light-primary fw-semibold w-200px py-3" data-kt-menu="true" style="">
                                            <!--begin::Menu item-->
                                            <div class="menu-item px-3">
                                                <a asp-Controller="Categories" asp-action="Edit" asp-route-id="@category.Id"
                                                   class="menu-link px-3 js-render-modal">
                                                    Edit
                                                </a>
                                            </div>
                                            <!--end::Menu item-->
                                            <!--begin::Menu item-->
                                            <div class="menu-item px-3">
                                                <a href="javascript:;" class="menu-link flex-stack px-3 js-toggle-status" data-id="@category.Id">
                                                    Toggle Status
                                                </a>
                                            </div>
                                            <!--end::Menu item-->
                                        </div>

                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>


        }
    </div>

</div>
@*     // ده خاص بال datatable
 *@
@section Plugins {
    <script src="~/assets/plugins/datatables/datatables.bundle.js"></script>
}


@section Scripts {
    <script>
        $(document).ready(function() {
            $('table').DataTable();
            // Attach the click event to the 'Toggle Status' button
            $('.js-toggle-status').on('click', function(e) {
                e.preventDefault(); // Prevent default anchor behavior

                // Get the category id from the data-id attribute
                var categoryId = $(this).data('id');

                // Get the closest table row where the button was clicked
                var $row = $(this).closest('tr');

                // Send an AJAX POST request to toggle the status
                $.ajax({
                    url: '/Categories/ToggleStatus', // URL to your ToggleStatus action
                    type: 'POST',
                    data: {
                        // '__RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val(),

                        id: categoryId
                    },
                    success: function(response) {
                        // Response contains lastUpdatedOn and isDeleted (true/false)
                        var lastUpdatedOn = response.lastUpdatedOn;
                        var isDeleted = response.isDeleted;

                        // Update the status badge
                        var $statusBadge = $row.find('.status-badge');
                        if (isDeleted) {
                            $statusBadge.removeClass('badge-light-success').addClass('badge-light-danger').text('Deleted');
                        } else {
                            $statusBadge.removeClass('badge-light-danger').addClass('badge-light-success').text('Available');
                        }

                        // Update the LastUpdatedOn field
                        $row.find('.last-updated-on').text(lastUpdatedOn);

                        alert('Category status updated successfully.');
                    },
                    error: function(xhr, status, error) {
                        // Handle errors if the request fails
                        alert('An error occurred while updating the category status.');
                        console.log(xhr.responseText);
                    }
                });
            });
        });

    </script>
}
